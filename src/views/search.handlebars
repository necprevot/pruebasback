<div class="search-header">
    <h2>üîç Resultados de b√∫squeda para: "{{searchTerm}}"</h2>
    {{#if totalResults}}
        <p class="search-stats">Se encontraron {{formatNumber totalResults}} {{pluralize totalResults "resultado" "resultados"}}</p>
    {{else}}
        <p class="search-stats no-results">No se encontraron resultados</p>
    {{/if}}
</div>

<!-- Sugerencias si no hay resultados -->
{{#if suggestions}}
    {{#unless (hasItems products)}}
        <div class="suggestions-section">
            <h3>üí° Quiz√°s estabas buscando:</h3>
            <div class="suggestions-list">
                {{#each suggestions}}
                    <a href="/?search={{this.value}}" class="suggestion-item">
                        {{#eq this.type 'category'}}üìÇ{{else}}üì¶{{/eq}} {{this.value}}
                    </a>
                {{/each}}
            </div>
        </div>
    {{/unless}}
{{/if}}

<!-- Filtros de b√∫squeda -->
{{#if (hasItems products)}}
    <div class="search-filters">
        <form method="GET" action="/search">
            <input type="hidden" name="q" value="{{searchTerm}}">
            
            <div class="filters-row">
                <div class="filter-group">
                    <label for="category">üìÇ Categor√≠a:</label>
                    <select id="category" name="category" onchange="this.form.submit()">
                        <option value="all" {{#eq filters.currentCategory 'all'}}selected{{/eq}}>Todas</option>
                        {{#each filters.categories}}
                            <option value="{{this}}" {{#eq this ../filters.currentCategory}}selected{{/eq}}>{{this}}</option>
                        {{/each}}
                    </select>
                </div>

                <div class="filter-group">
                    <label for="availability">üì¶ Disponibilidad:</label>
                    <select id="availability" name="availability" onchange="this.form.submit()">
                        <option value="all" {{#eq filters.currentAvailability 'all'}}selected{{/eq}}>Todos</option>
                        <option value="available" {{#eq filters.currentAvailability 'available'}}selected{{/eq}}>Disponibles</option>
                        <option value="outOfStock" {{#eq filters.currentAvailability 'outOfStock'}}selected{{/eq}}>Sin Stock</option>
                        <option value="lowStock" {{#eq filters.currentAvailability 'lowStock'}}selected{{/eq}}>Stock Bajo</option>
                    </select>
                </div>

                <div class="filter-group">
                    <label for="sort">üìä Ordenar:</label>
                    <select id="sort" name="sort" onchange="this.form.submit()">
                        <option value="relevance" {{#eq filters.currentSort 'relevance'}}selected{{/eq}}>Relevancia</option>
                        <option value="price_asc" {{#eq filters.currentSort 'price_asc'}}selected{{/eq}}>Precio: Menor a Mayor</option>
                        <option value="price_desc" {{#eq filters.currentSort 'price_desc'}}selected{{/eq}}>Precio: Mayor a Menor</option>
                        <option value="title_asc" {{#eq filters.currentSort 'title_asc'}}selected{{/eq}}>Nombre A-Z</option>
                        <option value="newest" {{#eq filters.currentSort 'newest'}}selected{{/eq}}>M√°s Recientes</option>
                    </select>
                </div>

                <div class="filter-group">
                    <label for="minPrice">üí∞ Precio m√≠n:</label>
                    <input type="number" id="minPrice" name="minPrice" value="{{filters.minPrice}}" placeholder="Desde" min="0">
                </div>

                <div class="filter-group">
                    <label for="maxPrice">üí∞ Precio m√°x:</label>
                    <input type="number" id="maxPrice" name="maxPrice" value="{{filters.maxPrice}}" placeholder="Hasta" min="0">
                </div>

                <button type="submit" class="btn-primary">Filtrar</button>
            </div>
        </form>
    </div>
{{/if}}

<!-- Resultados de b√∫squeda -->
{{#if (hasItems products)}}
    <div class="search-results">
        <div class="results-header">
            <span class="results-count">
                Mostrando {{length products}} de {{totalResults}} productos
                {{#if pagination.totalPages}}
                    (P√°gina {{pagination.page}} de {{pagination.totalPages}})
                {{/if}}
            </span>
        </div>

        <div class="products-grid">
            {{#each products}}
                <div class="product-card {{#unless this.status}}product-disabled{{/unless}}">
                    <div class="product-header">
                        <div class="product-title">
                            {{{highlight this.title ../searchTerm}}}
                        </div>
                        <div class="product-price">{{formatPrice this.price}}</div>
                    </div>
                    
                    {{#if this.thumbnails.length}}
                        <div class="product-images">
                            <img src="{{imageUrl (first this.thumbnails)}}" 
                                 alt="{{this.title}}" 
                                 class="product-image" 
                                 onerror="this.src='/img/no-image.png';">
                        </div>
                    {{else}}
                        <div class="product-no-image">üì¶</div>
                    {{/if}}
                    
                    <div class="product-description">
                        {{{highlight (truncate this.description 120) ../searchTerm}}}
                    </div>
                    
                    <div class="product-details">
                        <div class="product-meta">
                            <span class="category-badge">{{this.category}}</span>
                            <span class="stock-badge {{stockClass this.stock}}">
                                {{stockStatus this.stock}}
                            </span>
                            {{#if (isNew this.createdAt)}}
                                <span class="new-badge">¬°Nuevo!</span>
                            {{/if}}
                        </div>
                        
                        <div class="product-info">
                            <small>Stock: <strong>{{this.stock}}</strong></small>
                            <small>C√≥digo: <strong>{{this.code}}</strong></small>
                        </div>
                    </div>
                    
                    <!-- Controles del carrito -->
                    {{#if (and this.status (gt this.stock 0))}}
                        <div class="cart-controls">
                            <div class="quantity-section">
                                <label for="quantity-{{this._id}}">Cantidad:</label>
                                <input type="number" 
                                       id="quantity-{{this._id}}" 
                                       min="1" 
                                       max="{{this.stock}}" 
                                       value="1" 
                                       class="quantity-input">
                            </div>
                            <button onclick="addToCart('{{this._id}}', '{{escapeHtml this.title}}', {{this.price}}, {{this.stock}})" 
                                    class="btn-success add-to-cart-btn">
                                üõí Agregar al Carrito
                            </button>
                            <a href="/product/{{this._id}}" class="btn-info view-product-btn">
                                üëÅÔ∏è Ver Detalles
                            </a>
                        </div>
                    {{else}}
                        <div class="product-unavailable">
                            {{#if this.status}}
                                <span class="out-of-stock">Sin stock disponible</span>
                            {{else}}
                                <span class="product-inactive">Producto no disponible</span>
                            {{/if}}
                            <a href="/product/{{this._id}}" class="btn-secondary view-product-btn">
                                üëÅÔ∏è Ver Detalles
                            </a>
                        </div>
                    {{/if}}
                </div>
            {{/each}}
        </div>

        <!-- Paginaci√≥n para b√∫squeda -->
        {{#if pagination}}
            {{#if (gt pagination.totalPages 1)}}
                <div class="pagination-section">
                    <div class="pagination-info">
                        P√°gina {{pagination.page}} de {{pagination.totalPages}} 
                        ({{totalResults}} {{pluralize totalResults "resultado" "resultados"}} total)
                    </div>
                    
                    <div class="pagination-controls">
                        {{#if pagination.hasPrevPage}}
                            <a href="/search?q={{searchTerm}}&{{buildQueryString query page=1}}" class="btn-pagination">‚èÆÔ∏è Primera</a>
                            <a href="/search?q={{searchTerm}}&{{buildQueryString query page=pagination.prevPage}}" class="btn-pagination">‚¨ÖÔ∏è Anterior</a>
                        {{/if}}
                        
                        {{#each (range (subtract pagination.page 2) (add pagination.page 2) 1 pagination.totalPages)}}
                            {{#if (eq this ../pagination.page)}}
                                <span class="btn-pagination current-page">{{this}}</span>
                            {{else}}
                                <a href="/search?q={{../searchTerm}}&{{buildQueryString ../query page=this}}" class="btn-pagination">{{this}}</a>
                            {{/if}}
                        {{/each}}
                        
                        {{#if pagination.hasNextPage}}
                            <a href="/search?q={{searchTerm}}&{{buildQueryString query page=pagination.nextPage}}" class="btn-pagination">Siguiente ‚û°Ô∏è</a>
                            <a href="/search?q={{searchTerm}}&{{buildQueryString query page=pagination.totalPages}}" class="btn-pagination">√öltima ‚è≠Ô∏è</a>
                        {{/if}}
                    </div>
                </div>
            {{/if}}
        {{/if}}
    </div>

{{else}}
    <!-- Sin resultados -->
    <div class="no-results-section">
        <div class="no-results-icon">üîç</div>
        <h3>No se encontraron productos</h3>
        <p>Tu b√∫squeda de <strong>"{{searchTerm}}"</strong> no coincide con ning√∫n producto.</p>
        
        <div class="search-suggestions">
            <h4>üí° Sugerencias:</h4>
            <ul>
                <li>Verifica la ortograf√≠a de las palabras</li>
                <li>Utiliza t√©rminos m√°s generales</li>
                <li>Prueba con sin√≥nimos</li>
                <li>Reduce el n√∫mero de palabras</li>
            </ul>
        </div>

        <div class="alternative-actions">
            <a href="/" class="btn-primary">Ver Todos los Productos</a>
            <a href="/realtimeproducts" class="btn-secondary">Productos en Tiempo Real</a>
        </div>
    </div>
{{/if}}

<!-- Status del carrito (mantener del home) -->
<div id="cartStatus" class="cart-status-bar">
    <div class="cart-info">
        <strong>üõí Carrito:</strong> <span id="cartCount">0</span> productos
    </div>
    <div class="cart-actions">
        <button id="viewCartBtn" class="btn-primary">Ver Carrito</button>
        <button id="clearCartBtn" class="btn-danger">Limpiar</button>
        <button id="newCartBtn" class="btn-secondary">Nuevo</button>
    </div>
</div>

<!-- Alertas -->
<div id="alertContainer"></div>

