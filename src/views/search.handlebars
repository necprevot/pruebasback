<script>
// Incluir todas las funciones de carrito del home.handlebars
// (Se pueden reutilizar las mismas funciones)

// Funci√≥n adicional para resaltar t√©rminos de b√∫squeda
function highlightSearchTerms() {
    const searchTerm = '{{searchTerm}}';
    if (!searchTerm) return;
    
    const elements = document.querySelectorAll('.product-title, .product-description');
    elements.forEach(element => {
        const text = element.innerHTML;
        const regex = new RegExp(`(${searchTerm})`, 'gi');
        element.innerHTML = text.replace(regex, '<mark>$1</mark>');
    });
}

// Ejecutar cuando se carga la p√°gina
document.addEventListener('DOMContentLoaded', () => {
    highlightSearchTerms();
    initializeCart(); // Funci√≥n del home
});

