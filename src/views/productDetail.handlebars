<nav class="breadcrumb">
    <a href="/products">üè† Cat√°logo</a>
    <span class="breadcrumb-separator">></span>
    <a href="/products?query={{breadcrumb.category}}">{{breadcrumb.category}}</a>
    <span class="breadcrumb-separator">></span>
