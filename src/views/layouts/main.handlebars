<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}} - BBFermentos</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <header>
        <div class="header-content">
            <img src="/img/logo.png" alt="BBFermentos Logo" class="logo">
            <div>
                <h1>BBFermentos</h1>
                <nav>
                    <a href="/products">CatÃ¡logo</a>
                    
                    <!-- âœ… LINK SOLO VISIBLE PARA ADMIN -->
                    <a href="/realtimeproducts" class="auth-link" data-auth-required="true" data-role-required="admin" style="display: none;">
                        ðŸ”§ Panel Admin
                    </a>
                    
                    <a href="#" onclick="goToCart()">ðŸ›’ Ver Mi Carrito</a>
                    
                    <!-- Enlaces de autenticaciÃ³n -->
                    <a href="/login" class="auth-link" data-auth-required="false">ðŸ”‘ Iniciar SesiÃ³n</a>
                    <a href="/register" class="auth-link" data-auth-required="false">ðŸ‘¤ Registro</a>
                    <a href="/profile" class="auth-link" data-auth-required="true" style="display: none;">ðŸ‘¤ Mi Perfil</a>
                    <a href="#" onclick="BBAuth.logout()" class="auth-link" data-auth-required="true" style="display: none;">ðŸšª Salir</a>
                </nav>
            </div>
        </div>
    </header>

    <main class="container">
        {{{body}}}
    </main>

    <footer>
        <p>&copy; 2024 BBFermentos - Productos fermentados de calidad</p>
    </footer>

    <!-- Scripts globales -->
    <script src="/js/auth.js"></script>
    <script>
        // FunciÃ³n para ir al carrito desde cualquier pÃ¡gina
        function goToCart() {
            const cartId = localStorage.getItem('bbfermentos_cart_id');
            if (cartId) {
                window.location.href = `/carts/${cartId}`;
            } else {
                alert('No tienes un carrito activo. Ve al inicio para crear uno.');
                window.location.href = '/products';
            }
        }

        function updateAuthUI() {
            const userData = getUserData();
            const isAuth = isAuthenticated();
            
            // Actualizar navegaciÃ³n
            const authLinks = document.querySelectorAll('.auth-link');
            authLinks.forEach(link => {
                const authRequired = link.dataset.authRequired === 'true';
                const roleRequired = link.dataset.roleRequired; // 'admin', 'premium', etc.
                
                if (authRequired) {
                    if (isAuth) {
                        // Verificar rol si es necesario
                        if (roleRequired) {
                            if (userData && userData.role === roleRequired) {
                                link.style.display = 'inline';
                            } else {
                                link.style.display = 'none';
                            }
                        } else {
                            link.style.display = 'inline';
                        }
                        
                        // Actualizar nombre de usuario
                        if (userData && link.textContent.includes('Usuario')) {
                            link.textContent = `ðŸ‘¤ ${userData.first_name}`;
                        }
                    } else {
                        link.style.display = 'none';
                    }
                } else {
                    // Links para no autenticados
                    if (isAuth) {
                        link.style.display = 'none';
                    } else {
                        link.style.display = 'inline';
                    }
                }
            });
        }

        // Helper functions necesarias
        function getUserData() {
            const userData = localStorage.getItem('bbfermentos_user_data');
            return userData ? JSON.parse(userData) : null;
        }

        function isAuthenticated() {
            return !!localStorage.getItem('bbfermentos_auth_token');
        }

        // Inicializar autenticaciÃ³n al cargar cualquier pÃ¡gina
        document.addEventListener('DOMContentLoaded', () => {
            updateAuthUI();
            
            // Verificar si hay mensajes en la URL
            const urlParams = new URLSearchParams(window.location.search);
            const message = urlParams.get('message');
            
            if (message === 'logged_out') {
                if (window.BBAuth && window.BBAuth.showAlert) {
                    window.BBAuth.showAlert('SesiÃ³n cerrada correctamente', 'info');
                }
                // Limpiar la URL
                window.history.replaceState({}, document.title, window.location.pathname);
            }
        });
    </script>
</body>
</html>