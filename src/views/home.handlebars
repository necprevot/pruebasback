<div class="page-header">
    <h2>{{#if filters.search}}Resultados para: "{{filters.search}}"{{else}}Cat√°logo de Productos{{/if}}</h2>

    <!-- Estad√≠sticas r√°pidas -->
    {{#if stats}}
