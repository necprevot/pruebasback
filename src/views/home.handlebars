        {{/if}}
    </div>
</div>
{{/if}}
{{/if}}

{{else}}
<div class="no-products">
    <div class="no-products-icon">üîç</div>
    <h3>No se encontraron productos</h3>
    <p>
        {{#if filters.search}}
